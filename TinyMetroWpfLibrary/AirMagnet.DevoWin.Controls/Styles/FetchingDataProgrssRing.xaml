<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:AirMagnet.AircheckWifiTester.Controls">

    <Style TargetType="{x:Type local:FetchingDataProgrssRing}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:FetchingDataProgrssRing}">
                    <Canvas Name="RootCanvas" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="{DynamicResource DefaultBackgroundBrush}">
                        <local:ProgressRing Name="Part_ProgressRing" IsActive="True" HorizontalAlignment="Center" Width="50" Height="50"/>
                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>